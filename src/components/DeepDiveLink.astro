---
interface Props {
	href: string;
	title: string;
	description: string;
}

const { href, title, description } = Astro.props;
---

<a href={href} class="deep-dive-link">
	<div class="deep-dive-card">
		<div class="deep-dive-header">
			<span class="deep-dive-badge">Deep Dive</span>
			<svg class="deep-dive-arrow" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
				<path d="M5 12h14M12 5l7 7-7 7"/>
			</svg>
		</div>
		<h4 class="deep-dive-title">{title}</h4>
		<p class="deep-dive-description">{description}</p>
	</div>
</a>
